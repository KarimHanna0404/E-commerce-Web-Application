<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1-create-products-table" author="malak">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="products"/>
            </not>
        </preConditions>

        <createTable tableName="products" remarks="Stores product information">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_products" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_products_code"/>
            </column>
            <column name="description" type="TEXT" remarks="Detailed product description"/>
            <column name="image_url" type="VARCHAR(500)" remarks="URL to product image"/>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-user-foreign-key-in-products" author="meladhanna">
        <addForeignKeyConstraint constraintName="fk_products_user"
                                 baseTableName="products"
                                 baseColumnNames="user_id"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="product-description-max-1000" author="karim">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="products" columnName="description"/>
        </preConditions>
        <sql>
            ALTER TABLE products MODIFY COLUMN description VARCHAR (1000);
        </sql>
    </changeSet>

    <changeSet id="product-price-is-positive" author="Karim Hanna">
        <sql>
            ALTER TABLE products
                ADD CONSTRAINT chk_product_price_positive
                    CHECK (price &gt; 0);
        </sql>
    </changeSet>

    <changeSet id="alter-image-url-column-to-longtext" author="Karim Hanna">
        <modifyDataType tableName="products" columnName="image_url" newDataType="LONGTEXT" />
    </changeSet>

</databaseChangeLog>