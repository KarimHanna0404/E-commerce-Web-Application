<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-user-table" author="karim hanna">
        <createTable tableName="user">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(64)">
                <constraints unique="true"/>
            </column>
            <column name="email" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-email-check-constraint" author="Karim Hanna">
        <sql>
            ALTER TABLE user
                ADD CONSTRAINT chk_email_format
                    CHECK (email REGEXP '^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$');
        </sql>
    </changeSet>

    <changeSet id="add-password-check-constraint" author="Karim Hanna">
        <sql>
        <![CDATA[
            ALTER TABLE user
                ADD CONSTRAINT chk_password_strong
                    CHECK (
                        password REGEXP '^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&^#()_+=\\-])[A-Za-z\\d@$!%*?&^#()_+=\\-]{8,}$'
                );
            ]]>
    </sql>
    </changeSet>

</databaseChangeLog>